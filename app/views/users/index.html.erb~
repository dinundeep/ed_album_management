<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>

    <tr><td><%= f.label :login_name %></td><td><%= f.text_field :login_name %></td></tr>
    <tr><td><%= f.label :login_pass %></td><td><%= f.text_field :login_pass %></td></tr>
    <tr><td><%= f.submit %></td></tr>
 
  </table>

<% end %>










